<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_card_bg">


    <!-- Content below header and above footer -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background">

        <RelativeLayout
            android:id="@+id/fan_information"
            android:background="@color/menu_card_bg"
            android:layout_width="fill_parent"
            android:layout_height="405px"
            android:layout_marginBottom="1dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/menu_card_text"
                android:text="Options ..."
                android:fontFamily="sans-serif-medium"
                android:textSize="30sp" />
        </RelativeLayout>

        <Switch
            android:id="@+id/fan_on_off"
            android:layout_below="@id/fan_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/menu_card_bg"
            android:textSize="20sp"
            android:text="Turn fan off (Green means fan is off):" />
    </RelativeLayout>
</RelativeLayout>